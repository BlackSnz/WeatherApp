<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:padding="16dp"
    tools:context=".WeatherMainActivity">

    <com.example.weatherapp.ui.screens.WindCardView
        style="@style/WindCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/windCardView"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvMinTemperatureToday"
        app:layout_constraintStart_toStartOf="parent"
        app:speedValue="8"
        app:speedUnit="m/s"
        app:direction="se"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <!-- The structural block of the main weather -->
    <!-- Current temperature -->
    <TextView
        android:id="@+id/tvTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        tools:text="24°C"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="64sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/ivWeatherIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- The weather icon -->
    <ImageView
        android:id="@+id/ivWeatherIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:contentDescription="@string/weather_icon"
        android:src="@drawable/weather_icon"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tvTemperature"
        app:layout_constraintStart_toEndOf="@id/tvTemperature"
        app:layout_constraintTop_toTopOf="@id/tvTemperature" />

    <!-- The minimum today temperature -->
    <TextView
        android:id="@+id/tvMinTemperatureToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        tools:text="Min: 10°C"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tvTemperature"
        app:layout_constraintTop_toBottomOf="@id/tvTemperature" />

    <!-- The maximum today temperature -->
    <TextView
        android:id="@+id/tvMaxTemperatureToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        tools:text="Max: 24°C"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/tvMinTemperatureToday"
        app:layout_constraintTop_toBottomOf="@id/tvTemperature"/>

    <!-- Название города -->
    <TextView
        android:id="@+id/tvCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        tools:text="Moscow"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/tvTemperature"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Описание погоды -->
    <TextView
        android:id="@+id/tvWeatherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@id/tvTemperature"
        tools:text="Sunny" />

    <!-- Feels like today temperature -->
    <TextView
        android:id="@+id/tvFeelsLikeToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="Feels like: 24°C"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvWeatherDescription"
        app:layout_constraintEnd_toEndOf="parent"/>



    <!-- Дополнительная информация -->
    <TextView
        android:id="@+id/tvHumidityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity:"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tvWindText"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft" />

    <TextView
        android:id="@+id/tvWindText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind:"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tvPressureText"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft" />

    <TextView
        android:id="@+id/tvPressureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="Pressure:"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft" />

    <TextView
        android:id="@+id/tvPressureInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        tools:text="1030 hPa" />

    <TextView
        android:id="@+id/tvWindInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tvPressureInfo"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        tools:text="7 m/s" />

    <TextView
        android:id="@+id/tvHumidityInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tvWindInfo"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        tools:text="70 %" />

    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="Settings icon"
        android:src="@drawable/settings_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"/>



</androidx.constraintlayout.widget.ConstraintLayout>
